
@{
    ViewBag.Title = "GetUserRoles";
}

<h2>GetUserRoles</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            @Html.DropDownList("Email", (IEnumerable<SelectListItem>)ViewBag.Users, "Select ...", htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}

@if (ViewBag.Roles != null)
{
    <div>
        <h3>Roles for this user: </h3>
        <ul>
            @foreach(var role in ViewBag.Roles)
                {
            <li>@role - @Html.ActionLink("Delete", "DeleteUserRole", new { Email = ViewBag.Email, Role = role })</li>
                }
        </ul>
    </div>
}